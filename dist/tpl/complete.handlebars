    <ul>
      {{#each tile}}
      <li class="artical-reveal-tile {{title}} {{type}}">
        <div class="tile-content">
          <h2 class="section">{{section}}</h2>
          <h2 class="title">{{title}}</h2>
          <h2 class="rubrik">{{rubrik}}</h2>
          {{#ifvalue type equals="quarter"}}
          <div class="image-tint-{{tint}}"></div>
          {{/ifvalue}}
          <div class="image-grad"></div>
